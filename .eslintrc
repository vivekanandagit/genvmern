{
    "parser": "babel-eslint",
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "jest": true,
        "mongo": true
    },
    "globals": {
        "__DEV__": false,
        "__TEST__": false,
        "__PROD__": false,
        "__COVERAGE__": false
    },
    "rules": {
        "prefer-template": 0,
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "always",
                "named": "always",
                "asyncArrow": "always"
            }
        ],
        "no-console": 1,
        "key-spacing": "off",
        "jsx-quotes": [
            2,
            "prefer-single"
        ],
        "max-len": [
            2,
            120,
            2
        ],
        "object-curly-spacing": [
            2,
            "always"
        ],
        "comma-dangle": "off",
        "indent": [
            2,
            4,
            {
                "SwitchCase": 1
            }
        ],
        "react/jsx-indent": [
            2,
            4
        ],
        "react/jsx-indent-props": [
            2,
            4
        ],
        "semi": [
            2,
            "never"
        ],
        "no-underscore-dangle": 0,
        "consistent-return": [
            0,
            {
                "treatUndefinedAsUnspecified": true
            }
        ],
        "react/jsx-uses-react": 2,
        "react/jsx-uses-vars": 2,
        "react/react-in-jsx-scope": 2
    },
    "plugins": [
        "react",
        "jsx-a11y",
        "import"
    ],
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".jsx"]
            }
        }
    }
}
